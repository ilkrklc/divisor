{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution": "Bundler",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@types": ["types.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
