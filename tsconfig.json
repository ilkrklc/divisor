{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@typings/*": ["typings/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
